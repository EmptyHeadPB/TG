<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <Authors>Aman Agnihotri</Authors>
    <Product>Telegram.Bots.Json</Product>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Telegram.Bots.Abstractions\Telegram.Bots.Abstractions.csproj" />
    <ProjectReference Include="..\Telegram.Bots.Requests\Telegram.Bots.Requests.csproj" />
    <ProjectReference Include="..\Telegram.Bots.Types\Telegram.Bots.Types.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>
        runtime; build; native; contentfiles; analyzers; buildtransitive
      </IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
